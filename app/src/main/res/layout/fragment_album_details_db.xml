<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.AlbumDetailsDbFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/album_details_db_fragment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/photos_list_item"
        android:layoutAnimation="@anim/layout_fall_down"
        />

    <Button
        android:id="@+id/album_details_db_fragment_delete_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/color3"
        android:layout_margin="20dp"
        android:text="@string/delete_album"
        android:padding="5dp"
        android:textColor="@color/color5"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>